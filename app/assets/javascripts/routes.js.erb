/* Routing */

app.config(['$routeProvider', function($routeProvider) {
  $routeProvider
    .when('/', {controller: 'IndexPageCtrl', templateUrl: '<%= asset_path('angular/templates/index.html') %>'})
    .when('/products', {controller: 'OfferPageCtrl', templateUrl: '<%= asset_path('angular/templates/products.html') %>'})
    .otherwise({redirectTo: '/'});
}]);